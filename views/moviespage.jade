extends layout

block content

  .container
    .row
      each movie, i in movies
        .col-sm-8.col-md-8
          .row
            .col-sm-4.col-md-5
              img#moviePageImage.img-responsive(src='#{movie.moviepic}')
            .col-sm-8.col-md-7
              p 
                strong #{movie.moviename}
              p #{movie.rating}
              p #{movie.releasedate}
              p #{movie.description}
              hr
              p Trailer #{movie.trailer}
              hr
              //- p Cast: #{movie.cast}
              //- div
              //-   p
              //-     strong Crew:
              //-   p Director:
              //-   p Screenwriters:
              p 
              strong Director: 
              | #{movie.director}
              p
              strong Screenwriter: 
              | #{movie.screenwriter}
              p 
              strong Cast: 
              | #{movie.cast}

